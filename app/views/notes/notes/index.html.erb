<%= turbo_frame_tag 'main_page' do %>
  <div class="container">
    <div class="header">
      <h1 class="title is-2">Notes</h1>
      <% unless @notes.empty? %>
        <%= render partial: 'new' %>
      <% end %>
    </div>
  </div>
  <%= render partial: 'empty_state', locals: { notes: @notes} %>
<% end %>
<%= turbo_stream_from 'notes' %>
<div id='notes'>
  <% @notes.each do |note| %>
    <%= render partial: 'note', locals: {note: note} %>
  <% end %>
</div>